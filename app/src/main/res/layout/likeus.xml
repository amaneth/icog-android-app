<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/cardview_dark_background"
                android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/likeus_toolbar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:background="@android:color/holo_orange_light"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="154dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="184dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#78522D"
        android:gravity="center_vertical"
        android:id="@+id/relativeLayout">

        <ImageView
            android:id="@+id/twitt_like_btn"
            android:layout_width="200dp"
            android:layout_height="96dp"
            android:layout_alignTop="@+id/fake_image_button"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_toEndOf="@+id/fake_image_button"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/twitt_smalled"
            android:layout_toRightOf="@+id/fake_image_button"/>

        <ImageView
            android:id="@+id/fake_image_button"
            android:layout_width="172dp"
            android:layout_height="96dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/facebook_smalled"
            android:layout_alignParentLeft="true"/>
    </RelativeLayout>

</RelativeLayout>