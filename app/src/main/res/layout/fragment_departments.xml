<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/bb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="88dp"
                android:padding="-8dp"
                tools:context="com.example.amankassahun.DepartmentsFragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.v7.widget.RecyclerView
        android:id="@+id/blog_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/home_fragment_progress"
        android:layout_toLeftOf="@+id/fast_scroller"
        android:layout_alignParentLeft="true"/>

    <xyz.danoz.recyclerviewfastscroller.vertical.VerticalRecyclerViewFastScroller
        android:id="@+id/fast_scroller"
        android:layout_width="8dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        />

    <ProgressBar
        android:id="@+id/home_fragment_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/blog_list_view"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/fast_scroller"
        android:indeterminate="true"
        android:visibility="visible"
        android:layout_alignRight="@+id/blog_list_view"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add_post_btn"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/blog_list_view"
        android:layout_alignParentBottom="false"
        android:layout_alignParentEnd="false"
        android:layout_alignRight="@+id/blog_list_view"
        android:layout_marginBottom="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="400dp"
        android:clickable="true"
        android:paddingRight="96dp"
        android:visibility="invisible"
        app:fabSize="mini"
        app:srcCompat="@mipmap/action_add"/>


</RelativeLayout>
